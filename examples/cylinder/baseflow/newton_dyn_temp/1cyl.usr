c-----------------------------------------------------------------------
      subroutine usrdat2
      include 'SIZE'
      include 'TOTAL'
      integer iel,ifc,m
      
      if(ifheat)then
       cbc(:,:,2)=cbc(:,:,1)
       do iel=1,nelt
        do ifc = 1, 2*ndim
         if(cbc(ifc,iel,1).eq.'W  ')cbc(ifc,iel,2)='t  '
         if(cbc(ifc,iel,1).eq.'v  ')cbc(ifc,iel,2)='t  '
        enddo
       enddo
      endif
      if (ldimt.gt.1) then
      do m = 2,ldimt
       cbc(:,:,m)=cbc(:,:,1)
       do iel=1,nelt
        do ifc = 1, 2*ndim
         if(cbc(ifc,iel,1).eq.'W  ')cbc(ifc,iel,m)='t  '
         if(cbc(ifc,iel,1).eq.'v  ')cbc(ifc,iel,m)='t  '
        enddo
       enddo
      enddo
      endif
      return
      end
