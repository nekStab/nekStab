      subroutine userchk
      include 'SIZE'
      include 'TOTAL'

      call nekStab

      if((istep.eq.0).OR.ifoutfld.AND.(ldimt.gt.1))then
       ifpo = .false.; ifto = .false.
       call outpost(t(1,1,1,1,1),t(1,1,1,1,1),vz,pt,t(1,1,1,1,1),'sca')
       ifpo = .true.; ifto = .true.
      endif

      return
      end
c-----------------------------------------------------------------------
      subroutine nekStab_usrchk
      include 'SIZE'
      include 'TOTAL'

      if(istep.eq.0)then !change defaults

        k_dim = int(uparam(7)) ; call bcast(k_dim,isize)
        schur_tgt = 0 ; call bcast(schur_tgt,isize)
        maxmodes = 2 ; call bcast(maxmodes,isize)
        ifres = .false. ; call bcast(ifres,lsize)
        ifdyntol = .true. ; call bcast(ifdyntol,lsize)

      endif
      
      if((istep.eq.0).OR.ifoutfld.AND.(ldimt.gt.1))then
       ifpo = .false.; ifto = .false.
       !call outpost(t(1,1,1,1,2),t(1,1,1,1,3),vz,pt,t(1,1,1,1,1),'sca')
       ifpo = .true.; ifto = .true.
      endif

      return
      end
c-----------------------------------------------------------------------
      subroutine userf (ix,iy,iz,ieg)
      include 'SIZE'
      include 'TOTAL'
      include 'NEKUSE'

      integer ip, iel
      real rtmp
 
      ffx = 0.0d0
      ffy = 0.0d0
      ffz = 0.0d0

      !t      (lx1,ly1,lz1,lelt,ldimt)
      !tbase  (lx1,ly1,lz1,lelt,ldimt)
      !tp     (lpx1*lpy1*lpz1*lpelt,ldimt,lpert)

      if(ifheat.and.uparam(06).gt.0)then
      iel = gllel(ieg)
      ip = ix + nx1*(iy-1+ny1*(iz-1+nz1*(iel-1)))
       if (jp .eq. 0) then ! uparam(6) is the Ri/Fr -- random values for example
         ffy = ffy + t(ix, iy, iz, iel, 1)* uparam(06)
         ffy = ffy + t(ix, iy, iz, iel, 2)*(uparam(06)/2)
         ffy = ffy + t(ix, iy, iz, iel, 3)*(uparam(06)/3)
       endif
       if (jp .gt. 0) then
        if (ldimt .eq. 1) ffy = ffy + tp(ip, 1, 1) *uparam(06)
        if (ldmit .eq. 2) ffy = ffy + tp(ip, 2, 1)*(uparam(06)/2)
        if (ldmit .eq. 3) ffy = ffy + tp(ip, 3, 1)*(uparam(06)/3)
       endif
      endif

      call nekStab_forcing(ffx,ffy,ffz,ix,iy,iz,ieg)

      return
      end
